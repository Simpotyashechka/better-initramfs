# Rescue Shell, this is not good idea to set it here. Better would be kernel boot parameter.
#rescueshell="true"

# TuxOnIce
tuxonice_resume="false"

# rootfs mount
root="/dev/mapper/dmcrypt_root" #dmcrypted rootfs
